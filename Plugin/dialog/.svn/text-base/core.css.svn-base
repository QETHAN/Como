.como_dialog{left:0px;overflow:visible;position:absolute;top:0px;width:100%;z-index:1000;}
.como_dialog .dialog_pop{overflow:visible;position:relative;z-index:1001;}
.como_dialog .dialog_loading{font-size:12pxfont-family:"lucida grande",tahoma,verdana,arial,sans-serif;}
.como_dialog .dialog_iframe{filter:alpha(opacity=0);left:0px;position:absolute;top:0px;z-index:3;}
.como_dialog .dialog_mask{z-index:1000;display:block;position:absolute;top:0px;left:0px;width:100%;}
.como_dialog .pop_table{border-collapse:collapse;margin:auto;table-layout:fixed;direction:ltr;width: 100%;}
td.pop_topleft, td.pop_topright, td.pop_bottomleft, td.pop_bottomright{height:10px;overflow:hidden;padding:0px!important;padding:5px;width:10px!important;width:0px;}
td.pop_topleft{background:url('images/dialog-sprite.png') no-repeat 0 0;}
td.pop_topright{background:url('images/dialog-sprite.png') no-repeat 0 -10px;}
td.pop_bottomleft{background:url('images/dialog-sprite.png') no-repeat 0 -20px;}
td.pop_bottomright{background:url('images/dialog-sprite.png') no-repeat 0 -30px;}
td.pop_top, td.pop_bottom{background:url('images/dialog-sprite.png') repeat-x 0 -40px;}
td.pop_side{background:url('images/dialog-sprite.png') repeat-y -10px 0;}
.ie6 td.pop_topleft{background-image:url('images/dialog-sprite.png')!important;background-image:none;filter:none!important;_filter:progid:DXImageTransform.Microsoft.AlphaImageLoader(src='images/dialog-sprite.png', sizingMethod='crop');}
.ie6 td.pop_topright{background-image:url('images/dialog_top_right.png')!important;background-image:none;filter:none!important;_filter:progid:DXImageTransform.Microsoft.AlphaImageLoader(src='images/dialog_top_right.png', sizingMethod='crop');}
.ie6 td.pop_bottomleft{background-image:url('images/dialog_bottom_left.png')!important;background-image:none;filter:none!important;_filter:progid:DXImageTransform.Microsoft.AlphaImageLoader(src='images/dialog_bottom_left.png', sizingMethod='crop');}
.ie6 td.pop_bottomright{background-image:url('images/dialog_bottom_right.png')!important;background-image:none;filter:none!important;_filter:progid:DXImageTransform.Microsoft.AlphaImageLoader(src='images/dialog_bottom_right.png', sizingMethod='scale');}
.ie6 td.pop_border{background-image:url('images/dialog_border.png')!important;background-image:none;filter:none!important;_filter:progid:DXImageTransform.Microsoft.AlphaImageLoader(src='images/dialog_border.png', sizingMethod='scale');}
td.pop_content{background-color:white;padding:0px;direction:ltr;}
.pop_content h2.dialog_title{background:#207992;border-bottom:1px solid #555555;color:white;margin:0px;position:relative;font-size:14px;font-weight:bold;padding:4px 10px 5px 10px;}
.pop_content em{font-style:normal;font-weight:normal;overflow:hidden;position:absolute;top:6px; right:8px;background-image:url('images/closedialog.gif');width:16px; height:16px;cursor:pointer;}
.pop_content .dialog_content{background:#fff;border:1px solid #555;position:relative;}
.pop_content .dialog_body{padding:10px;font-size:14px;}
.pop_content .dialog_buttons{background:#f2f2f2;padding:4px 8px;text-align:right;border-top:1px solid #ccc;}
.pop_content .dialog_buttons input{margin-left:10px;}