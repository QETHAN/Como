<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
	<meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
	<title>UI Pager</title>
	<script type="text/javascript" src="../../Como.unpack.js?only"></script>
	<script type="text/javascript">
		Como.include('ui/pager.js', null, {done:true});
	</script>
</head>
<body>
页码：<span id="test1">1</span><br/><br/>
<div id="pager1"></div>
<br/><br/>
<button onclick="myPager1.active(25)">第25页</button>
<script type="text/javascript">
Como.onincludeHandler(function(){
	window.myPager1 = new Como.UI.Pager({
		container: '#pager1',
		count: 30,
		onPager: function(num, _this){
			Como('#test1').html(num);
		}
	});
});
</script>
</body>
</html>