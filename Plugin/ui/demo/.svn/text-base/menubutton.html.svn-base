<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
	<meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
	<title>UI MenuButton</title>
	<script type="text/javascript" src="../../Como.unpack.js?only"></script>
	<script type="text/javascript">
		Como.include('ui/menubutton.js', null, {done:true});
	</script>
</head>
<body>
<button id="test1">单选</button>

<button id="test2">多选</button>

<script type="text/javascript">
Como.onincludeHandler(function(){
	var menuButton1 = new Como.UI.MenuButton({
		element: '#test1',
		text: ['选项1', '选项2', '选项3', '选项4'],
		onSelect: function(v, t, _this){
			Como('#test1').html(v);
		}
	});

	var menuButton2 = new Como.UI.MenuButton({
		element: '#test2',
		text: ['选项1', '选项2', '选项3', '选项4'],
		checked: true,
		onSelect: function(v, t, _this){
			var v = _this.getChecked();
			Como('#test2').html(v.length ? v.join(',') : '多选');
		}
	});
});
</script>
</body>
</html>