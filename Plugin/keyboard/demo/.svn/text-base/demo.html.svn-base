<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
	<meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
	<title>KeyBoard</title>
	<style>
		.box{height: 50px;}
	</style>
	<script type="text/javascript" src="../../Como.unpack.js?only"></script>
	<script type="text/javascript">
		Como.include('keyboard/core.js', null, {done:true});
	</script>
</head>
<body>
<div class="box">
	1. 任意键：按a, b试试看
	<div id="test1"></div>
</div>
<div class="box">
	2. 特殊键：按f5, f6试试看(ie下f5键阻止不了)
	<div id="test2"></div>
</div>
<div class="box">
	3. 组合键：按Ctrl+S, Ctrl+N试试看(chrome下，Ctrl+N阻止不了)
	<div id="test3"></div>
</div>
<div class="box">
	4. 输入框测试<br/>
	<input type="text" name="" id="input1" />
	<div id="test4"></div>
</div>
<div class="box">
	5. 再次输入框测试<br/>
	<input type="text" name="" id="input2" />
	<div id="test5"></div>
</div>
<div class="box">
	6. 后退键测试<br/>
	<input type="text" name="" id="input3" />
	<div id="test6"></div>
</div>

<script type="text/javascript">
Como.onincludeHandler(function(){
	Como.KeyBoard.down(document, 'a', function(){
		Como('#test1').append('a ');
	});

	var test = function(){Como('#test1').append('b ');};
	Como.KeyBoard.up(document, 'b',test);

	//Como.KeyBoard.unUp(document, 'b', test);

	Como.KeyBoard.down(document, 'f5', function(){
		Como('#test2').append('f5 ');
		return true;
	});
	Como.KeyBoard.up(document, 'f6', function(){
		Como('#test2').append('f6 ');
	});

	Como.KeyBoard.up(document, 'ctrl+s', function(){
		Como('#test3').append('ctrl+s ');
	});
	Como.KeyBoard.up(document, 'ctrl+n', function(){
		Como('#test3').append('ctrl+n ');
	});

	Como.KeyBoard.up('#input1', null, function(){
		Como('#test4').html(Como('#input1').val());
	});

	Como.KeyBoard.up('#input2', null, function(){
		Como('#test5').html(Como('#input2').val());
	});
	
	Como.KeyBoard.down(document, 'backspace', function(){
		Como('#test6').html(Como('#input3').val());
	})
});
</script>
</body>
</html>