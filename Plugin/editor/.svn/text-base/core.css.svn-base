/* CSS Document */
.editor_tools{border:1px solid #C7C7C5; overflow:auto;background-color:#ECECEC;font-size:12px;}
.editor_toolsbox{overflow:auto;padding:3px;}

.editor_toolsgrp{background-color:#F6F6F6;display:inline;overflow:auto;margin-right:3px;}
.editor_toolsitem{cursor:pointer;overflow:hidden;}
.editor_icon{display:-moz-inline-stack;display:inline-block;_display:inline;overflow:hidden;outline:none;font:0/0 sans-serif;text-align:left;text-indent:-9999px;*text-indent:0;zoom:1;background-image:url(images/editor_bg.gif);background-repeat:no-repeat;;vertical-align:middle;}
.mode_status .editor_icon{display:none;}
.mode_status .e_CODE{display:block;}
.editor_body{border-left:1px solid #C7C7C5;border-right:1px solid #C7C7C5;background-color:#FFFFFF;}
.editor_foot{border-left:1px solid #C7C7C5;border-right:1px solid #C7C7C5;border-bottom:1px solid #C7C7C5; height: 30px;background-color:#F0F0F0;}
.editor_foot .editor_resize{float:right; margin:4px 5px;}
.edit_mode{float:left;width: 150px;font-size:12px;}
.edit_mode a{margin-left:5px;margin-top:5px;padding:3px;border:1px solid #ccc;background-color:#fff;float:left;text-decoration:none;color:#666;;}
.edit_mode .on{color:#CCC;cursor:default;}
.editor_textareaparent{overflow:hidden;width: 100%;}
.editor_textarea{border:0 none;width:100%; font-size: 14px; font-family: Arial,Helvetica,sans-serif; line-height: 170%; white-space: pre-wrap;}
.editor_pannel{position:absolute;}
.editor_pannel div{font-size:12px;}
.editor_piteam{position:absolute;border:1px solid #C7C7C5;margin-top:5px;}
.editor_psub{border-bottom:1px solid #C7C7C5;background-color:#F0F0F0;text-align:center; line-height:20px;height: 20px; }
.editor_pcontent{background-color:#FFF;}
.editor_pcontent ul{padding:0px;margin:0px;overflow:auto;}
.editor_pcontent ul li{list-style-type:none;clear:none;color:#000;display:block;min-height:0;padding-bottom:0;}
.editor_pannel .FONT,.editor_pannel .SIZE{width: 130px;}
.editor_pannel .FONT li{text-align:center; line-height:2; cursor:pointer;}
.editor_pannel .SIZE li{text-align:center; line-height:1.6; cursor:pointer;}
.editor_pannel .FONT li.on,.editor_pannel .SIZE li.on{background-color:#FBFBDF;}
.editor_pannel .COLOR,.editor_pannel .BGCOLOR{width: 250px;}
.editor_pannel .COLOR ul,.editor_pannel .BGCOLOR ul{padding-left:8px;padding-right:8px;padding-top:8px;overflow:auto;}
.editor_pannel .COLOR li,.editor_pannel .BGCOLOR li{float:left;width: 10px;height: 11px;margin-top:1px;margin-left:1px;cursor:pointer;}
.editor_pannel .COLOR li.on,.editor_pannel .BGCOLOR li.on{width: 9px;height: 10px;border:1px solid #FF0000;margin:0px;}
.editor_pannel .COLOR .default,.editor_pannel .BGCOLOR .default{margin:8px;display:block;text-align:center; border:1px solid #F0F0F0;cursor:pointer;}
.editor_pannel .COLOR .editor_pcontent div.on,.editor_pannel .BGCOLOR .editor_pcontent div.on{border:1px solid #FF0000;background-color:#FBFBDF;}
.editor_pannel .LINK{width: 300px;}
.editor_pannel .LINK .editor_pcontent{padding:10px;}
.editor_pannel .LINK .txt{border:1px solid #999;width: 220px;}
.editor_pannel .LINK .btn{border:1px solid #999;background-color:#F0F0F0;cursor:pointer;}

.editor_pannel .SPECIAL{width: 210px;}
.editor_pannel .SPECIAL ul{padding:5px;}
.editor_pannel .SPECIAL li{float:left;width: 20px; height: 20px;text-align:center; line-height:1.5; cursor:pointer;}
.editor_pannel .SPECIAL li.on{width: 18px;height: 18px;border:1px solid #FF0000;background-color:#FBFBDF;}

.editor_pannel .ICON{width: 220px;}
.editor_pannel .ICON ul{padding:5px;}
.editor_pannel .ICON li{float:left;width: 22px; height: 22px;margin:2px;text-align:center; cursor:pointer;background: transparent url(images/editor_face.gif) no-repeat scroll 3px 3px;}
.editor_pannel .ICON li.on{margin:1px;border:1px solid #FF0000;background-color:#FBFBDF;}

.editor_pannel .IMG{width: 270px;}
.editor_pannel .IMG ul{padding:5px;}
.editor_pannel .IMG li{padding-top:5px;list-style-type:none;zoom:1;}
.editor_pannel .IMG li.p{padding-left:25px;}
.editor_pannel .IMG li.pb{text-align:center;padding-top:10px;}
.editor_pannel .IMG .btn{border:1px solid #999;background-color:#F0F0F0;cursor:pointer;}
.editor_pannel .IMG .txt{width: 220px;}